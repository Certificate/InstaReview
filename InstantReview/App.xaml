<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="InstantReview.App">
    <Application.Resources>
        <ResourceDictionary>
            
            <!-- Button styles -->
            <Style x:Key="ButtonBaseStyle" TargetType="Button">
                <Setter Property="BorderRadius" Value="4" />
                <Setter Property="HeightRequest" Value="50" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="Salmon" />
            </Style>
            
            <Style x:Key="AnchorButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}">
                <Setter Property="BackgroundColor" Value = "White"></Setter>
                <Setter Property="HeightRequest" Value = "40"></Setter>
            </Style>
            
            
        </ResourceDictionary>
    </Application.Resources>
</Application>