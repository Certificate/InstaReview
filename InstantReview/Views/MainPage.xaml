<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:InstantReview" x:Class="InstantReview.MainPage">


    <StackLayout BackgroundColor="FloralWhite">

        <Label
            LineBreakMode="WordWrap"
            FontAttributes="Bold"
            HorizontalOptions="Center" 
            VerticalOptions="CenterAndExpand"
            TextColor="Salmon"
            Margin="15"
            FontSize ="90">
            <Label.Text>
                <OnPlatform x:TypeArguments="x:String"
                      iOS="Hello World on iOS!"
                      Android="Hello World on Android" />
            </Label.Text>
        </Label>

        <!--<Image>
            <Image.Triggers>
                <DataTrigger></DataTrigger>
            </Image.Triggers>
        </Image>-->

        <Button Text="New review"
                TextColor="Salmon"
                BackgroundColor="DimGray"
                HorizontalOptions="Center" 
                VerticalOptions="CenterAndExpand"
                WidthRequest="150"
                Margin="15, 15, 15, 15"
                Command="{Binding NewReviewCommand}"></Button>

        <Image></Image>
    </StackLayout>
</ContentPage>