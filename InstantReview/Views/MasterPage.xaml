<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InstantReview.Views.MasterPage"
             Title="MasterPageTitle"
             BackgroundColor="DimGray">

    <ContentPage.Content>
        <StackLayout>
            
            <Button Text="Account Details"
                    Style="{StaticResource AnchorButtonStyle}"
                    BackgroundColor="DimGray"
                    HorizontalOptions="FillAndExpand"
                    Command="{Binding AccountDetailsCommand}"
                    IsEnabled="True">
            </Button>
            
            <Label Text="This is the MasterDetailPage"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand"
                   TextColor="White"/>

            <Button 
                   Margin="20,20"
                   Text="LOG OUT"
                   TextColor="White"
                   BackgroundColor="Salmon"
                   Command="{Binding LogOutCommand}"
                   HorizontalOptions="FillAndExpand">
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>