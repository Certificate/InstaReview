<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InstantReview.Views.LoginPage"
             Title="LOGIN">

    <ContentPage.Content>

        <RelativeLayout>

            <BoxView x:Name ="boxView"
               
               RelativeLayout.WidthConstraint = "{ConstraintExpression
               Type = RelativeToParent,
               Property = Width,
               Factor = 1}"
        
               RelativeLayout.HeightConstraint ="{ConstraintExpression
               Type = RelativeToParent,
               Property = Height,
               Factor = 0.3}">

            </BoxView>

            <StackLayout
               RelativeLayout.WidthConstraint = "{ConstraintExpression
               Type = RelativeToParent,
               Property = Width,
               Factor = 1}"
        
               RelativeLayout.YConstraint ="{ConstraintExpression
               Type = RelativeToView,
               ElementName = boxView,
               Property = Height,
               Factor = 0.65}">

                <Label Text ="InstaReview" HorizontalOptions ="Center" VerticalOptions ="End" FontSize ="40"/>

            </StackLayout>

            <StackLayout
                RelativeLayout.WidthConstraint = "{ConstraintExpression
                Type = RelativeToParent,
                Property = Width,
                Factor = 1}"
        
                RelativeLayout.YConstraint ="{ConstraintExpression
                Type = RelativeToView,
                ElementName = boxView,
                Property = Height,
                Factor = 1,
                Constant = 50}">

                <Entry Keyboard ="Email" Placeholder ="Email"></Entry>
                <Entry IsPassword ="True" Placeholder ="Password"></Entry>
                <Button Text ="Sign in" HorizontalOptions ="End"></Button>

            </StackLayout>

            <StackLayout
                RelativeLayout.WidthConstraint = "{ConstraintExpression
                Type = RelativeToParent,
                Property = Width,
                Factor = 1}"
        
                RelativeLayout.YConstraint ="{ConstraintExpression
                Type = RelativeToParent,
                Property = Height,
                Factor = .90}">
                <Button Text ="PRESS ME TO LOG IN" 
                        HorizontalOptions ="Center"
                        Command="{Binding LoginCommand}"></Button>


            </StackLayout>

        </RelativeLayout>

    </ContentPage.Content>

</ContentPage>